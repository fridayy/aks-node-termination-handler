{erl_opts, [debug_info]}.
{deps, [
  {jsone, "1.7.0"},
  {cowboy, "2.9.0"}
]}.

{shell, [
  {config, "config/shell.config"},
  {apps, [aksnth]}
]}.

%% plugins
{project_plugins, [erlfmt]}.
{erlfmt, [
  write,
  {files, "apps/*/{src,include,test}/*.{hrl,erl}"}
]}.

{relx, [
  {release, {aksnth, "0.1.0"}, [
    aksnth,
    sasl
  ]},

  {mode, dev},
  {sys_config_src, "./config/sys.config.src"},
  {vm_args, "./config/vm.args"},
  {extended_start_script, true}
]}.

{profiles, [
  {prod, [
    {relx,
      [
        {mode, prod}
      ]}
  ]},
  {test, [
    {deps, [
      {
        meck, "0.9.2"
      }
    ]}
  ]}
]}.
